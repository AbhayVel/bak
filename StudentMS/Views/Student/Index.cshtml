@using StudentMS.Entities
@model List<Student>

    <form action="/student/Index" method="post">
        <div class="formgroup">
            <label>Id</label>
            <input type="text" name="Id" value="@ViewBag.Id" />

            
        </div>

        <div class="formgroup">
            <label>FirstName</label>
            <input type="text" name="FirstName" value="@ViewBag.FirstName" />

            
        </div>

         <div class="formgroup">
            <label>FirstName</label>
            <input type="text" name="LastName" value="@ViewBag.LastName" />

            
        </div>

        <input type="hidden" id="orderBy" name="orderBy" value="@ViewBag.OrderBy" />
         <input type="hidden" id="columnName" name="columnName" value="@ViewBag.ColumnName" />
        <button type="submit" id="btnSubmit">Search</button>

    </form>

    
 <table class="table">
     <tr>
         <td><a onclick="sortSetData('id','@ViewBag.OrderBy')" >Id</a></td>
         <td><a onclick="sortSetData('FirstName','@ViewBag.OrderBy')">First Name</a></td>
         <td><a onclick="sortSetData('LastName','@ViewBag.OrderBy')" href="/student/index?columnName=LastName&orderBy=@ViewBag.OrderBy">Last Name:</a></td>
         <td><a onclick="sortSetData('Class','@ViewBag.OrderBy')" href="/student/index?columnName=Class&orderBy=@ViewBag.OrderBy">Class</a></td>
         <td><a onclick="sortSetData('Fees','@ViewBag.OrderBy')" href="/student/index?columnName=Fees&orderBy=@ViewBag.OrderBy">Fees</a></td>
         <td>Age</td>
     </tr>

    @foreach(var item in Model)
    {
         <tr>
         <td>@item.Id</td>
         <td>@item.FirstName</td>
         <td>@item.LastName</td>
         <td>@item.Class</td>
         <td>@item.Fees</td>
         <td>@item.Age</td>
       </tr>
    }
   

    


 </table>

 <script>
 
 
 function sortSetData(columnName,orderBy){
     event.preventDefault();    
     debugger;
      document.getElementById("columnName").value=columnName;
      if("asc"==orderBy){
          orderBy='desc'
      }else {
            orderBy='asc'
      }

      document.getElementById("orderBy").value=orderBy;

     $("#columnName").val(columnName);
     $("#orderBy").val(orderBy);
     $("#btnSubmit").click();
     return false;
 }
 
 //#-> ID ->$("#id")
 //.->Class -> $(".class")
 //Tag Name-> $("tagname")
 </script>